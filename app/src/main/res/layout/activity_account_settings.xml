<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AccountSettings"
    android:background="@drawable/bg">


    <Button
        android:id="@+id/bPassword"
        android:layout_width="180dp"
        android:layout_height="32dp"
        android:layout_marginTop="24dp"
        android:background="#003152"
        android:text="Change Password?"
        android:textColor="#FFFFFF"
        app:layout_constraintStart_toStartOf="@+id/bEmail"
        app:layout_constraintTop_toBottomOf="@+id/bEmail" />

    <Button
        android:id="@+id/bLogout"
        android:layout_width="76dp"
        android:layout_height="32dp"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:background="#003152"
        android:onClick="logout"
        android:text="Log Out"
        android:textColor="#FFFFFF"
        app:layout_constraintStart_toEndOf="@+id/imageView8"
        app:layout_constraintTop_toTopOf="@+id/imageView8" />

    <ImageView
        android:id="@+id/imageView8"
        android:layout_width="50dp"
        android:layout_height="41dp"
        android:layout_marginStart="40dp"
        android:layout_marginLeft="40dp"
        android:layout_marginBottom="52dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/logout_icon" />

    <Button
        android:id="@+id/bDeactivate"
        android:layout_width="180dp"
        android:layout_height="32dp"
        android:layout_marginTop="24dp"
        android:background="#003152"
        android:onClick="deactivate"
        android:text="Deactivate Account"
        android:textColor="#FFFFFF"
        app:layout_constraintStart_toStartOf="@+id/bPassword"
        app:layout_constraintTop_toBottomOf="@+id/bPassword" />

    <Button
        android:id="@+id/bEmail"
        android:layout_width="180dp"
        android:layout_height="32dp"
        android:layout_marginTop="12dp"
        android:background="#003152"
        android:text="Change Email?"
        android:textColor="#FFFFFF"
        app:layout_constraintStart_toStartOf="@+id/iAcc"
        app:layout_constraintTop_toBottomOf="@+id/iAcc" />

    <ImageView
        android:id="@+id/iAcc"
        android:layout_width="158dp"
        android:layout_height="151dp"
        android:layout_marginStart="40dp"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="44dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/add_member_icon"
        android:alpha="0"/>

    <TextView
        android:id="@+id/textView"
        android:layout_width="121dp"
        android:layout_height="60dp"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="32dp"
        android:text="Change your personal account settings"
        android:textColor="#FFFFFF"

        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/iAcc"
        app:layout_constraintTop_toTopOf="@+id/iAcc" />
</android.support.constraint.ConstraintLayout>